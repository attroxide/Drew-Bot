<Main>:
	name: "main"
	auth_code: auth_code
	submit: submit
	
	FloatLayout:		
		Label:
			pos_hint: {"top":1}
			size_hint: 1,0.15
			text: "You are not logged in"
			font_size: 40
		
		Label:
			pos_hint: {"top":0.75}
			size_hint: 1,0.15
			text: "Input your auth code below to log in"
			font_size: 40
			
		TextInput:
			size_hint: 0.5,0.15
			pos_hint: {"top":0.35,"x":0.25}
			id: auth_code
			multiline: False
	
		Button:
			size_hint: 0.5,0.15
			pos_hint: {"x":0.25}
			id: submit
			text: "Log In"
			on_release: root.login()
	
<DebugScreen>:
	name: "debug"
	latency: latency
	mespeak: lastmymsg
	botspeak: lastmsg
	
	canvas.before:
	    Color:
            rgb: 0.4,0.4,0.4, 1
        Rectangle:
            pos: self.pos
            size: self.size
			
	FloatLayout:
		Label:
			id: latency
			text: "Latency: NULL"
			font_size: 25
			pos_hint: {"top":1,"x":0.25}
			size_hint: 0.5,0.15
		
		Label:
			id: lastmsg
			text: "Bot: "
			font_size: 25
			pos_hint: {"top":.85,"x":0.25}
			size_hint: 0.5,0.15
		
		Label:
			id: lastmymsg
			text: "You: "
			font_size: 25
			pos_hint: {"top":0.7,"x":0.25}
			size_hint: 0.5,0.15
		
		ActionBar:
			ActionView:
				id: nav
				
				ActionGroup:
					mode: "normal"
					text: "Navigation"
					
					ActionButton:
						text: "Debug"
						on_release: app.root.current = "debug"
					
					ActionButton:
						text: "Commands"
						on_release: app.root.current = "Commands"
						
					ActionButton:
						text: "Accounts"
						on_release: app.root.current = "Accounts"
						
					ActionButton:
						text: "Settings"
						on_release: app.root.current = "Settings"
					
					ActionButton:
						text: "Log Out"
						on_release: app.logout()
						
				ActionPrevious:
					title: ''
					with_previous: False
					app_icon: ''
					app_icon_width: 0
					app_icon_height: 0
					size_hint_x: None
					width: len(self.title) * 10
		
